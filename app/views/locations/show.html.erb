<div class="centered">
    <div id="masonry-container" class="small-11 has-gutters inline">
        <% @projects.each do |project|%>

            <div class="box col3">
                <% I18n.locale == :fr ? title = project.name_fr : title = project.name_en %>
                <%= link_to image_tag(project.main_image(:grey), alt: title, class: "BWtoColor"), controller: "projects", action: "show", id: project.id %>
                <p class="project-title BWtoColor"><%=title%></p>
            </div>
        <% end %>
    </div>
</div>