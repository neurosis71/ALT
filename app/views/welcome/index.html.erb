<div class="row">
  <div class="home-logo">
    <%= image_tag "admin/logo.png", :class => 'no-border' %>
  </div>
</div>

<div class="home-title row">

  <div class="home-name">
    Audrey Lepers-Tassy
  </div>

  <div class="separator">
    <div class="mask-small"></div>
  </div>

  <div class="profession">
    <%=t('app.welcome.profession')%>
  </div>
</div>

<div class="link-list row">
  <div class="inline">
      <%= link_to about_path do %>
          <div class="about_thumb welcome_thumb">
            <span><%= t('app.layout.nav.about') %></span>
          </div>
      <% end %>
      <%= link_to book_path do %>
          <div class="book_thumb welcome_thumb">
            <span><%= t('app.layout.nav.book') %></span>
          </div>
      <% end %>
      <%= link_to resume_path do %>
          <div class="resume_thumb welcome_thumb">
            <span><%= t('app.layout.nav.resume') %></span>
          </div>
      <% end %>
      <%= link_to perso_projects_path do %>
          <div class="perso_thumb welcome_thumb">
            <span><%= t('app.layout.nav.perso') %></span>
          </div>
      <% end %>
      <%= link_to photos_path do %>
          <div class="photos_thumb welcome_thumb">
            <span><%= t('app.layout.nav.photos') %></span>
          </div>
      <% end %>
      <%= link_to contacts_path do %>
          <div class="contact_thumb welcome_thumb">
            <span><%= t('app.layout.nav.contact') %></span>
          </div>
      <% end %>
  </div>
</div>

<div class="language-select row">
<%= link_to t('app.welcome.lang_fr'), change_locale_path(:fr)%> - <%= link_to t('app.welcome.lang_en'), change_locale_path(:en)%>
</div>
