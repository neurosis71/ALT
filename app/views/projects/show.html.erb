<div class="row project-img">
  <%= image_tag @project.main_image, class: 'no-border' %>
</div>

<div class="project-desc row">
  <div class="small-12 small-centered columns">
      <div class="title"><span><%=t("app.projects.desc")%></span></div>
      <div class="desc-content"><%=@description.html_safe%></div>
  </div>
</div>


<div class="centered">
    <div id="masonry-container" class="transitions-enabled has-gutter small-11 small-centered inline">
      <% @photos.each_with_index do |photo, index|%>
          <div class="box col3 box-margin-bottom">
            <%= link_to(image_tag(photo.image(:medium), class: 'no-border'), "#", { "data-reveal-id" => "carousselModal", "position" => index, "class" => "open-modal"})%>
          </div>
      <% end %>
    </div>
</div>