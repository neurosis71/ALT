<div class="row">
  <div class="social-list">
    <%= link_to image_tag("social/linkedin.png", :class => "social-icon"), "https://fr.linkedin.com/pub/audrey-lepers-tassy/46/4b8/96a", :target => "_blank" %>
  </div>
</div>

<%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :name, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :subject, :required => true %>
    <%= f.input :message, :as => :text, :input_html => { :cols => 50, :rows => 8 }, :required => true %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, t('admin.buttons.send'), :class=> "button radius tiny info" %>
    </div>
<% end %>