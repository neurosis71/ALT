<h1>Cursus Show View</h1>

<%= link_to 'Edit', edit_admin_cursu_path(@cursu), :class => 'button radius tiny secondary' %>
<%= link_to 'Back', admin_resume_index_path, :class => 'button radius tiny ' %>

<p>
  <strong>Date:</strong>
  <%= @cursu.date %>
</p>

<p>
  <strong>School:</strong>
  <%= @cursu.school.html_safe %>
</p>

<ul class="tabs" data-tab>
  <li class="tab-title active"><a href="#panel1">Francais</a></li>
  <li class="tab-title"><a href="#panel2">Anglais</a></li>
</ul>

<div class="tabs-content">

  <div class="content contained active" id="panel1">

    <table>
      <tr>
        <td><strong>Location_fr:</strong></td>
        <td><%= @cursu.location_fr.html_safe %></td>
      </tr>

      <tr>
        <td colspan="2">
          <div class="separator small-12 columns">
            <div class="mask-small"></div>
          </div>
        </td>
      </tr>

      <tr>
        <td><strong>Description_fr:</strong></td>
        <td><%= @cursu.description_fr.html_safe %></td>
      </tr>
    </table>

  </div>

  <div class="content contained" id="panel2">

    <table>
      <tr>
        <td> <strong>Location_en:</strong></td>
        <td><%= @cursu.location_en.html_safe %></td>
      </tr>

      <tr>
        <td colspan="2">
          <div class="separator small-12 columns">
            <div class="mask-small"></div>
          </div>
        </td>
      </tr>

      <tr>
        <td><strong>Description_en:</strong></td>
        <td><%= @cursu.description_en.html_safe %></td>
      </tr>
    </table>

  </div>

</div>

<%= link_to 'Edit', edit_admin_cursu_path(@cursu), :class => 'button radius tiny secondary' %>
<%= link_to 'Back', admin_resume_index_path, :class => 'button radius tiny ' %>