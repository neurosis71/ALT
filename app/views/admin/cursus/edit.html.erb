<h1>Edit Cursus View</h1>

<%= form_for(@cursu, url: admin_cursu_path) do |f| %>

    <div class="date">
      <%= f.label :date%>
      <%= f.text_field :date %>
    </div>

    <div class="school">
      <%= f.label :school%>
      <%= f.text_field :school %>
    </div>


    <ul class="tabs" data-tab>
      <li class="tab-title active"><a href="#panel1">Francais</a></li>
      <li class="tab-title"><a href="#panel2">Anglais</a></li>
    </ul>

    <div class="tabs-content">

      <div class="content contained active" id="panel1">

        <table>
          <tr>
            <td><%= f.label :location_fr%></td>
            <td><%= f.text_field :location_fr %></td>
          </tr>
          <tr>
            <td><%= f.label :description_fr%></td>
            <td><%= f.text_area :description_fr, :class => 'ckeditor' %></td>
          </tr>
        </table>

      </div>

      <div class="content contained" id="panel2">

        <table>
          <tr>
            <td><%= f.label :location_en%></td>
            <td><%= f.text_field :location_en%></td>
          </tr>
          <tr>
            <td><%= f.label :description_en%></td>
            <td><%= f.text_area :description_en, :class => 'ckeditor' %></td>
          </tr>
        </table>

      </div>

    </div>


    <div class="submit">
      <%= f.submit :class => 'button radius tiny info' %>
    </div>
<% end %>
