<h1><%=t('admin.cursus.edit.title')%></h1>

<% if @cursu.errors.any? %>
    <div class="error_explanation small-8 small-centered columns">
      <h6><%= @cursu.errors.count %> <%=t('admin.forms.message.error')%> :</h6>

      <ul>
        <% @cursu.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for(@cursu, url: admin_cursu_path) do |f| %>

    <div class="date">
      <%= f.label t('activerecord.attributes.cursus.startdate')%>
      <%= f.text_field :start_date, :class => 'datepicker' %>
    </div>

    <div class="date">
      <%= f.label t('activerecord.attributes.cursus.enddate')%>
      <%= f.text_field :end_date, :class => 'datepicker' %>
    </div>

    <div class="school">
      <%= f.label t('activerecord.attributes.cursus.school')%>
      <%= f.text_field :school %>
    </div>


    <ul class="tabs" data-tab>
      <li class="tab-title active"><a href="#panel1"><%=t('admin.language.fr')%></a></li>
      <li class="tab-title"><a href="#panel2"><%=t('admin.language.en')%></a></li>
    </ul>

    <div class="tabs-content">

      <div class="content contained active" id="panel1">

        <table>
          <tr>
            <td><%= f.label t('activerecord.attributes.cursus.location_fr')%></td>
            <td><%= f.text_field :location_fr %></td>
          </tr>

          <tr>
            <td colspan="2">
              <div class="separator small-12 columns">
                <div class="mask-small"></div>
              </div>
            </td>
          </tr>

          <tr>
            <td><%= f.label t('activerecord.attributes.cursus.description_fr')%></td>
            <td><%= f.text_area :description_fr, :class => 'ckeditor' %></td>
          </tr>
        </table>

      </div>

      <div class="content contained" id="panel2">

        <table>
          <tr>
            <td><%= f.label t('activerecord.attributes.cursus.location_en')%></td>
            <td><%= f.text_field :location_en%></td>
          </tr>

          <tr>
            <td colspan="2">
              <div class="separator small-12 columns">
                <div class="mask-small"></div>
              </div>
            </td>
          </tr>

          <tr>
            <td><%= f.label t('activerecord.attributes.cursus.description_en')%></td>
            <td><%= f.text_area :description_en, :class => 'ckeditor' %></td>
          </tr>
        </table>

      </div>

    </div>


    <div class="submit">
      <%= f.submit t('admin.buttons.save'), :class => 'button radius tiny info' %>
    </div>
<% end %>
