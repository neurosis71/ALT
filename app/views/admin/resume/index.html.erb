
<div class="box">
  <h1>Cursus</h1>
  <%= link_to 'New', new_admin_cursu_path, :class => 'button radius tiny success' %>
  <table class="small-12 columns">
    <thead>
    <tr>
      <th>Date</th>
      <th>School</th>
      <th>location_fr</th>
      <th>location_en</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @cursus.each do |cursu| %>
        <tr>
          <td><%= cursu.date %></td>
          <td><%= cursu.school %></td>
          <td><%= cursu.location_fr %></td>
          <td><%= cursu.location_en %></td>
          <td><%= link_to 'Show', admin_cursu_path(cursu), :class => 'button radius tiny info' %></td>
          <td><%= link_to 'Edit', edit_admin_cursu_path(cursu), :class => 'button radius tiny secondary' %></td>
          <td><%= link_to 'Delete', admin_cursu_delete_path(cursu), :class => 'button radius tiny alert' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="separator small-12 columns">
