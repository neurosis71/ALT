<h1><%=t('admin.experience.delete.title')%></h1>


<%= link_to t('admin.buttons.delete'), admin_experience_destroy_path(:id => @experience.id), :class => 'button radius tiny alert' %>
<%= link_to t('admin.buttons.edit'), edit_admin_experience_path(@experience), :class => 'button radius tiny secondary' %>
<%= link_to t('admin.buttons.back'), admin_resume_index_path, :class => 'button radius tiny'  %>

<p>
  <strong><%=t('activerecord.attributes.professional_experiences.date')%>:</strong>
  <%= @experience.date %>
</p>

<p>
  <strong><%=t('activerecord.attributes.professional_experiences.company')%>:</strong>
  <%= @experience.company.html_safe %>
</p>

<ul class="tabs" data-tab>
  <li class="tab-title active"><a href="#panel1"><%=t('admin.language.fr')%></a></li>
  <li class="tab-title"><a href="#panel2"><%=t('admin.language.en')%></a></li>
</ul>

<div class="tabs-content">

  <div class="content contained active" id="panel1">

    <table>
      <tr>
        <td class="cell1"><strong><%=t('activerecord.attributes.professional_experiences.location_fr')%>:</strong></td>
        <td class="cell2"><%= @experience.location_fr.html_safe %></td>
      </tr>
      <tr>
        <td colspan="2">
          <div class="separator small-12 columns">
            <div class="mask-small"></div>
          </div>
        </td>
      </tr>
      <tr>
        <td class="cell1"><strong><%=t('activerecord.attributes.professional_experiences.description_fr')%>:</strong></td>
        <td class="cell2"><%= @experience.description_fr.html_safe %></td>
      </tr>
    </table>

  </div>

  <div class="content contained" id="panel2">

    <table>
      <tr>
        <td class="cell1"><strong><%=t('activerecord.attributes.professional_experiences.location_en')%>:</strong></td>
        <td class="cell2"><%= @experience.location_en.html_safe %></td>
      </tr>
      <tr>
        <td colspan="2">
          <div class="separator small-12 columns">
            <div class="mask-small"></div>
          </div>
        </td>
      </tr>
      <tr>
        <td class="cell1"><strong><%=t('activerecord.attributes.professional_experiences.description_en')%>:</strong></td>
        <td class="cell2"><%= @experience.description_en.html_safe %></td>
      </tr>
    </table>

  </div>



  <%= link_to t('admin.buttons.delete'), admin_experience_destroy_path(:id => @experience.id), :class => 'button radius tiny alert' %>
<%= link_to t('admin.buttons.edit'), edit_admin_experience_path(@experience), :class => 'button radius tiny secondary' %>
<%= link_to t('admin.buttons.back'), admin_resume_index_path, :class => 'button radius tiny'  %>
