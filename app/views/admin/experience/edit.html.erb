<h1>Edit Experience View</h1>

<% if @experience.errors.any? %>
    <div class="error_explanation small-8 small-centered columns">
      <h6><%= pluralize(@experience.errors.count, "erreur") %> sont apparues :</h6>

      <ul>
        <% @experience.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for(@experience, url: admin_experience_path) do |f| %>

    <div class="date">
      <%= f.label :date%>
      <%= f.text_field :date, :class => 'datepicker' %>
    </div>

    <div class="company">
      <%= f.label :company%>
      <%= f.text_field :company %>
    </div>

    <ul class="tabs" data-tab>
      <li class="tab-title active"><a href="#panel1">Francais</a></li>
      <li class="tab-title"><a href="#panel2">Anglais</a></li>
    </ul>

    <div class="tabs-content">

      <div class="content contained active" id="panel1">

        <table>
          <tr>
            <td class="cell1"><%= f.label :location_fr%></td>
            <td class="cell2"><%= f.text_field :location_fr %></td>
          </tr>
          <tr>
            <td colspan="2">
              <div class="separator small-12 columns">
                <div class="mask-small"></div>
              </div>
            </td>
          </tr>
          <tr>
            <td class="cell1"><%= f.label :description_fr%></td>
            <td class="cell2"><%= f.text_area :description_fr, :class => 'ckeditor' %></td>
          </tr>
        </table>

      </div>

      <div class="content contained" id="panel2">

        <table>
          <tr>
            <td class="cell1"><%= f.label :location_en%></td>
            <td class="cell2"><%= f.text_field :location_en%></td>
          </tr>
          <tr>
            <td colspan="2">
              <div class="separator small-12 columns">
                <div class="mask-small"></div>
              </div>
            </td>
          </tr>
          <tr>
            <td class="cell1"><%= f.label :description_en%></td>
            <td class="cell2"><%= f.text_area :description_en, :class => 'ckeditor' %></td>
          </tr>
        </table>

      </div>

    </div>

    <div class="submit">
      <%= f.submit :class => 'button radius tiny info' %>
    </div>
<% end %>
