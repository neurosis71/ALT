
<div class="login small-4 small-centered columns">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.email_field :email, :placeholder => "email", autofocus: true %>
      </div>

      <div class="field">
        <%= f.password_field :password, :placeholder => "password" , autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: 'button radius tiny info full-width' %>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="field centered">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
      <% end -%>

  <% end %>

  <%= render "devise/shared/links" %>
</div>


